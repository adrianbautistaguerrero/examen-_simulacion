{
  "version": 2,
  "builds": [
    {
      "src": "django_spam_detector/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "modelo_spam_final.joblib",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "django_spam_detector/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "django_spam_detector.settings"
  }
}
